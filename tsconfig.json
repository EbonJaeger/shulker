{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "ES2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ],
}